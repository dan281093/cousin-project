<div class="wrapper-bookings">
  <h2>Book this Service</h2>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="booking-center">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://source.unsplash.com/random')">
            <div class="card-content">
              <%= @service.description %>
              <h3><%= @service.name %></h3>
            </div>
            <img class="avatar" src='https://kitt.lewagon.com/placeholder/users/cveneziani'/>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="new-booking-description">
          <p><strong>Description:</strong></p>
          <p class="make-booking"> <%= @service.description %></p>
          <p><strong>Category:</strong></p>
          <p class="make-booking"> <%= @service.category %></p>
          <p><strong>Mench Name:</strong></p>
          <p class="make-booking"> <%= @service.user.name %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="middle">
      <%= simple_form_for [@service, @booking] do |b| %>
      <%= b.input :time, label: "What time do you need the service?", label_html: { class: "make-booking-label" }, as: :date_time_picker, input_html:
      { data:{
      date_format: "YYYY.MM.DD hh:mm A",
      date_day_view_header_format: 'MMM YYYY',
      date_side_by_side: true,
      date_min_date: Time.current.strftime('%Y-%m-%d')
      }}%>
    </div>
    <%= b.input :description, label: "Send a Message to your Mench", input_html: { 'rows' => 5, 'cols' => 1 }, class: "form_control" %>
    <%= b.submit "Create Booking", class: "btn btn-primary" %>
  </div>
</div>
<% end %>
</div>
